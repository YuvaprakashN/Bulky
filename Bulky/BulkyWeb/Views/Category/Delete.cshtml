@model Category


<form method="post">

    @*<input asp-for="Id" hidden/>*@

    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary"> Delete Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="ModelOnly">        *@
    </div>
    <div class="mb-3 row p-1">
        <label class="p-0" asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" disabled></input>
    </div>
    <div class="mb-3 row p-1">
        <label class="p-0" asp-for="DisplayOrder"></label>
        <input type="text" class="form-control" asp-for="DisplayOrder" disabled></input>
    </div>


    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control"> Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control"> Back to category list</a>
        </div>
    </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}